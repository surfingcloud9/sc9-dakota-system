# n8n Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_secure_password
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_PORT=5678
N8N_LOG_LEVEL=info
WEBHOOK_URL=http://localhost:5678
TIMEZONE=America/New_York

# Database Configuration
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n_user
DB_POSTGRESDB_PASSWORD=change_this_db_password

# Redis Queue Configuration
QUEUE_BULL_REDIS_HOST=redis
QUEUE_BULL_REDIS_PORT=6379
EXECUTIONS_MODE=queue

# ElevenLabs Configuration
# Get your API key from https://elevenlabs.io/app/settings
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
# Available voices: Rachel, Domi, Bella, Antoni, Elli, Josh, Arnold, Adam, Sam

# Twilio Configuration
# Get your credentials from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=${WEBHOOK_URL}/webhook/twilio-incoming

# TextingBiz Configuration
# Contact TextingBiz for API credentials
TEXTINGBIZ_API_KEY=your_textingbiz_api_key_here
TEXTINGBIZ_API_URL=https://api.textingbiz.com/v1
TEXTINGBIZ_WEBHOOK_URL=${WEBHOOK_URL}/webhook/sms-received

# Dakota System Configuration
DAKOTA_WEBHOOK_URL=${WEBHOOK_URL}/webhook/dakota-call
DAKOTA_SYSTEM_NAME=Dakota Phone Automation
DAKOTA_DEFAULT_VOICE=professional_female

# Security
# Generate strong passwords for production
# Use: openssl rand -base64 32
SECRET_KEY=your_secret_key_here

# Optional: SSL/TLS Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Optional: Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com

# Optional: Monitoring & Alerting
SENTRY_DSN=
SLACK_WEBHOOK_URL=

# Optional: Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
